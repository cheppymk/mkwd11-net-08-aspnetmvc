@model OrderViewModel

<h2>Create order</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder" method="post">
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label"></label>
                <input asp-for="PizzaName" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsDelivered" class="control-label"></label>
                <input asp-for="IsDelivered" type="checkbox" />
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "Id","UserFullName"))"></select>
            </div>
            <br />
            <br />
            <button type="submit" class="btn btn-success">SAVE</button>
        </form>
    </div>
</div>