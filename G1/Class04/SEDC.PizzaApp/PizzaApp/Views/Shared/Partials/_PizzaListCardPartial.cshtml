@model PizzaListViewModel

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src=@Model.imgUrl alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Price</p>
    </div>
    <br />
    <a type="button" class="btn btn-primary" asp-action="Details" asp-route-indentifier="@Model.Id">Details</a>
</div>