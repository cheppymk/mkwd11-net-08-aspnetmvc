@using SEDC.PizzaApp.Models.ViewModels
@model List<OrderViewModel>

@{
    ViewData["Title"] = "List of orders";
}

<partial name="~/Views/Shared/Partials/_OrderGreetingPartial.cshtml" />

<h2>List of orders:</h2>

<ol>
    @for (int i = 0; i < @Model.Count; i++)
    {
        <li>Pizza name: @Model.ElementAt(i).PizzaName - @Model.ElementAt(i).Price User: @Model.ElementAt(i).UserFullName</li>
    }
</ol>