@using SEDC.PizzaApp.Models.Enums;
@model OrderViewModel
<h2>Edit Order</h2>

<div class="row">
    <div class="col-sm-4">
        <form asp-action="EditOrderPost" method="post">
            @*we need this field to bind OrderId and send it back to the server*@
            <input type="hidden" asp-for="OrderId"/>
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label"> </label>
                <input type="text" asp-for="PizzaName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Delivered" class="control-label"> </label>
                <input type="checkbox" asp-for="Delivered" />
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"> </label>
                @*we create dropdown, where we create option tag for each user in ViewBag.Users
                value in each option tag will be Id, text will be FullName*@
                <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "Id", "FullName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"> </label>
                @* this will generate dropdown where for each option, value will be the value of the enum (1, 2...), text will be the name of the enum member*@
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>